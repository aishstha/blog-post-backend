{
  "defaultSeverity": "error",
  "extends": ["tslint:recommended", "tslint-consistent-codestyle", "tslint-config-prettier"],
  "jsRules": {
    "object-literal-sort-keys": false
  },
  "linterOptions": {
    "exclude": ["**/*.d.ts"]
  },
  "rules": {
    "ban": false,
    "label-position": true,
    "member-access": false,
    "switch-default": true,
    "ordered-imports": false,
    "no-collapsible-if": true,
    "no-string-literal": false,
    "no-unnecessary-else": true,
    "no-else-after-return": true,
    "newline-before-return": true,
    "object-literal-sort-keys": false,
    "no-switch-case-fall-through": true,
    "object-shorthand-properties-first": true,

    "quotemark": [true, "single"],
    "array-type": [true, "array"],
    "max-line-length": [true, 120],
    "interface-name": [true, "never-prefix"],
    "align": [true, "parameters", "statements"],
    "triple-equals": [true, "allow-null-check"],
    "no-inferrable-types": [true, "ignore-params"],
    "arrow-parens": [true, "ban-single-arg-parens"],
    "typedef": [true, "parameter", "property-declaration"],
    "no-console": [true, "log", "info", "time", "debug", "error", "trace", "timeEnd"],
    "variable-name": [true, "check-format", "ban-keywords", "allow-pascal-case", "allow-leading-underscore"],
    "trailing-comma": [
      true,
      {
        "multiline": "never",
        "singleline": "never"
      }
    ],
    "whitespace": [
      true,
      "check-decl",
      "check-type",
      "check-branch",
      "check-module",
      "check-operator",
      "check-typecast",
      "check-separator"
    ]
  }
}
